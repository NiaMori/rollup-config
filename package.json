{
  "name": "@niamori/rollup-config",
  "type": "module",
  "version": "0.1.9",
  "packageManager": "pnpm@10.23.0",
  "author": "NiaMori <Hellc5261@gmail.com> (https://github.com/niamori)",
  "license": "MIT",
  "homepage": "https://github.com/niamori/rollup-config",
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/esm/src/index.js"
    },
    "./*": {
      "dev:@niamori/rollup-config": "./src/*.js",
      "import": "./dist/esm/src/*.js",
      "require": "./dist/esm/src/*.js"
    }
  },
  "main": "./dist/esm/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/src/*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "dev": "rollup --config rollup.config.ts --configPlugin typescript --watch",
    "bump": "bumpp --no-push",
    "release": "pnpm run bump && pnpm run build && pnpm publish"
  },
  "dependencies": {
    "@niamori/utils": "^0.4.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "fast-glob": "^3.3.3",
    "rollup": "^4.53.3",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-node-externals": "^8.1.2",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "rxjs": "^7.8.2",
    "ts-pattern": "^5.9.0"
  },
  "devDependencies": {
    "@niamori/eslint-config": "^0.3.7",
    "@niamori/json-manipulator": "^0.1.1",
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.1",
    "bundle-require": "^5.1.0",
    "eslint": "^9.39.1",
    "tempy": "^3.1.0"
  }
}
